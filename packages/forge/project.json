{
  "name": "forge",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/forge/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/forge",
        "main": "packages/forge/src/index.ts",
        "tsConfig": "packages/forge/tsconfig.lib.json",
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "assets": [
          "packages/forge/*.md",
          {
            "input": "./packages/forge/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/forge/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/forge",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/forge",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/forge/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/forge"],
      "options": {
        "jestConfig": "packages/forge/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
